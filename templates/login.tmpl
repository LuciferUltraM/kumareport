{{ template "header.tmpl" .}}

<div class="row justify-content-md-center" style="padding-top:30px;">
      <div class="col-sm-4">
      <form accept-charset="UTF-8" method="post" action="/login">
      <div class="form-group">
            <label for="login">Username or Email Address</label>
            <input type="text" class="form-control" id="login" placeholder="" name="login">
      </div>
      <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="" name="password">
      </div>
      <button type="submit" class="btn btn-primary btn-block">Sign in</button>
      </form>
      </div>
</div>
{{ template "footer.tmpl" .}}